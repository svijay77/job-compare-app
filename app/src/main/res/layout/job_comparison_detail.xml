<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comparisonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Comparison"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2"
                android:layout_marginBottom="16dp">

                <TableRow android:background="#EEEEEE">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Job Title"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Job 1"
                        android:gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Job 2"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Company -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Company"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Location -->
                <TableRow android:background="#EEEEEE">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Location"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Yearly Salary -->
                <TableRow android:background="#EEEEEE">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="AYS"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Yearly Bonus -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="AYB"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Tuition -->

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="TR"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Tuition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Tuition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Health Insurance -->

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="HI"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Employee Discount -->

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="EPSD"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/job2Discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>
                <!-- Adoption Assistance -->
                <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="CAA"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/job1Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/job2Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center" />
            </TableRow>

                <!-- Job Score -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Job Score"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <!-- Result -->
            <TextView
                android:id="@+id/comparisonResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>